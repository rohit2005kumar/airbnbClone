<% layout('layouts/boilerplate') -%>
<body>

  <div class="card cardDiv col-9 border-0">
  <img src="<%- actualData.image.url %>" class="card-img-top" alt="Listing-Img" id="showimg"> 
  <div class="card-body">
    <p class="card-title"> Owned by :- <%= actualData.owner.username%></p>
    <h5 class="card-title"><%= actualData.title %></h5>
    <p class="card-text"><%- actualData.description %></p>
    <p class="card-text"> Price:- &#8377; <%- actualData.price.toLocaleString() %></p>
    <p class="card-text"> Location:-<%- actualData.location %></p>
    <p class="card-text">Country:-<%- actualData.country %></p>
    <div class="d-flex gap-2">
     <!-- -->
         <a href="/listings/edit/<%= actualData._id %>" class="btn" id="edit-link">Edit</a> 
    <form action="/listings/delete/<%= actualData._id %>?_method=Delete" method="post">
          <button class="btn">Delete</button>

     
    </form>
  
</div>

<!-- review -->
<div class="mt-5 mb-5">
  <hr>
  <% if(currUser) {%>
  <h4>Leave a Review</h4>
   <form action="/listings/<%= actualData._id %>/review" method="post" novalidate class="needs-validation">
  <div class=" m-5">
  <!-- star rating -->
<label for="range" class="form-label">Rating</label>
<fieldset class="starability-heartbeat">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
<!-- star rating end -->
  </div>


  <div class="m-5">
    <label for="comment">Comments</label>
    <textarea name="review[comment]" id="caption" class="form-control" rows="7" required></textarea>
      <div class="invalid-feedback">Please give your valueable feedback</div>
  </div>

  <button class=" btn btn-outline-dark">Submit</button>
 </form>
</div>
  </div> 
   <hr>
  <% } %>


  <!--show  reviews -->
  <% if(actualData.review.length>0) { %>
  <h4 class="m-5">All Reviews</h4>
  
  <div class="row">
 <% for(review of actualData.review){ %> 
  <div class="card col-4 m-2 ">
  <div class="card-body p-1">
    <h5 class="card-title">@<%= review.author.username %></h5>
     <p class="starability-result card-text" data-rating="<%= review.rating%>">
  </p>
     <p class="card-text"><%= review.comment %></p>
   
     <form action="/listings/<%= actualData._id %>/review/<%= review.id %>?_method=Delete" method="post">
         <button class="btn btncolor">Delete</button>
     </form>
     

  </div>
</div>
  <% } %>
  </div>
  <% } %>
    </div>
  

 
  

    
  </body>
 

 